@using WSCCore.Services;
@model WSCData.Models.ViewModels.QueueDetailsViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Queue</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Queue.Name)
        </dt>

        <dd>
            <b>@Html.DisplayFor(model => model.Queue.Name)</b>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Queue.Users)
        </dt>

        <dd>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Partial("Queues/_QueueUsersListDetailsPartial", Model)
        </dd>
    </dl>
</div>
<p>
    @if (User.IsInRole("Admin") || WSCUtils.IsUserInModeratorsGroup(Model.Queue.Moderators, User.Identity.Name))
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Queue.Id }) @:|
    }
    @Html.ActionLink("Back to List", "Index")
</p>
